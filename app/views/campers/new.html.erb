<h1>New Camper</h1>

<% if flash[:camper_error] %>
    <% flash[:camper_error].each do |error| %>
        <li><%= error %></li>
    <% end %>
<% end %>

<%= form_for @camper do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :age %>
    <%= f.text_field :age %>

    <%= f.submit %>
<% end %>